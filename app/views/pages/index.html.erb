<body style="font-family: <%= @pages.font %>; background-color: <%= @pages.color%>"></body>


<div class="container-fluid">
  <div class="row p-wrapper">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="col-md-4 col-md-offset-4" style="margin-top:10%;">
        </br>
        <h3 class="text-center">App</h3>
        <%= form_for @pages do |f| %>


            <div class="field">
              <label for="exampleInputEmail1" class="sr-only">Title</label>
              <%= f.text_field :title, placeholder: "Name", class: 'form-control', autofocus: true %>
            </div>
            </br>

            <div class="field">
              <label for="exampleInputEmail1" class="sr-only">Email address</label>
              <%= f.select(:font,
                           options_for_select([
                                                      ["Times New Roman", "Times New Roman"],
                                                      ["Arial", "Arial"],
                                                      ["Comic Sans MS", "Comic Sans MS"],

                                              ],
                                              :selected => @pages.font),
                           {}, {:class => 'form-control'}) %>
            </div>
            </br>

            <div class="field">
              <label for="exampleInputEmail1" class="sr-only">Theme</label>
              <%= f.text_field :color, placeholder: "Color", class: 'form-control minicolor', :id => "picker", data: {'no-turbolink' => true}, as: :minicolors, input_html: {data: {minicolors: {theme: :bootstrap, position: :right}}} %>
            </div>
            </br>


            <div class="actions" style="margin-top: 20px;">
              <%= f.submit "Submit", class: "btn btn-lg btn-primary btn-block p-roundedC" %>
            </div>
            </br>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>






<script>
    $('#picker').minicolors();
</script>
