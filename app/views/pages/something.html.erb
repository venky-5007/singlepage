<body style="font-family: <%= get_page.font %>; background-color: <%= "##{get_page.color}" %>"></body>
<div id="getpage">
<div class="container-fluid">
  <div class="row p-wrapper">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="col-md-4 col-md-offset-4" style="margin-top:10%;">
        </br>
        <h3 class="text-center">App</h3>
            <div class="field">
              <label for="exampleInputEmail1" class="sr-only">Title</label>
              <%= text_field_tag :title, get_page.title, placeholder: "Title", class: 'form-control test', autofocus: true %>

            </div>
            </br>

            <div class="field">
              <label for="exampleInputEmail1" class="sr-only">Font</label>
              <%= select_tag :font,  options_for_select([
                                                      ["Times New Roman", "Times New Roman"],
                                                      ["Arial", "Arial"],
                                                      ["Comic Sans MS", "sans-serif"],
                                                      ["Monaco", "Monaco"],
                                              ],),{:class => 'form-control'}%>
            </div>
            </br>

            <div class="field">
              <label for="exampleInputEmail1" class="sr-only">Color</label>
              <%= text_field_tag :color, get_page.color, placeholder: "Color", class: "form-control jscolor" %>
            </div>


            <div class="actions" style="margin-top: 20px;">
              <input type="button" value="Submit" name="page[button]" id="page_button"  class="btn btn-lg btn-primary btn-block p-roundedC page_app">
            </div>
            </br>
      </div>
    </div>
  </div>
</div>
</div>



<script>
    $(document).ready(function() {
        $(".page_app").click(function(){
            console.log($("#title").val());
            console.log($("#font").val());
            console.log($("#color").val());

            var title= $("#title").val();
            var font= $("#font").val();
            var color = $("#color").val();
            $.ajax({
                type: "POST",
                dataType: 'script',
                url: encodeURI('/pages/something'),
                data: {title: title, font: font, color: color, id: <%=get_page.id%>}
            });

        });
    });
</script>
