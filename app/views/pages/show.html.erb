<body style="font-family: <%= @page.font %>; background-color: <%= @page.color %>"></body>


<div class="container-fluid">
  <div class="row p-wrapper">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <div class="col-md-4 col-md-offset-4" style="margin-top:10%;">
        </br>
        <h3 class="text-center">App</h3>
        <%= form_for @page, remote: true do |f| %>


            <div class="field">
              <label for="exampleInputEmail1" class="sr-only">Title</label>
              <%= f.text_field :title, placeholder: "Title", class: 'form-control', autofocus: true %>

            </div>
            </br>

            <div class="field">
              <label for="exampleInputEmail1" class="sr-only">Email address</label>
              <%= f.select(:font,
                           options_for_select([
                                                      ["Times New Roman", "Times"],
                                                      ["Arial", "Arial"],
                                                      ["Comic Sans MS", "sans-serif"],
                                                      ["Monaco", "Monaco"],
                                              ],
                                              :selected => @page.font),
                           {}, {:class => 'form-control'}) %>
            </div>
            </br>

            <div class="field">
              <label for="exampleInputEmail1" class="sr-only">Theme</label>
              <%= f.text_field :color, placeholder: "Color", class: "form-control jscolor" %>
            </div>


            <div class="actions" style="margin-top: 20px;">
              <%= f.submit "Submit", class: "btn btn-lg btn-primary btn-block p-roundedC", onclick: "changeTheme()" %>
            </div>
            </br>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>

<script>

    function changeTheme() {
        var font = document.getElementById('page_font').value;
        var color = document.getElementById('page_color').value;
        document.body.style.backgroundColor = "#" + color;
        document.body.style.fontFamily = font;

//      alert(font+"--------"+color);
    }

</script>